# ======================================
# üé¨ Video Sensitivity Analysis Backend
# ======================================

# Server Configuration
PORT=5000
NODE_ENV=development
LOG_LEVEL=info

# Database Configuration
MONGO_URI=mongodb://localhost:27017/video_sensitivity_db
MONGO_OPTIONS=useNewUrlParser=true&useUnifiedTopology=true&socketTimeoutMS=45000

# Security Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
STREAM_SECRET=your_stream_secret_key_change_this_in_production
STREAM_TOKEN_EXPIRY=1h
JWT_EXPIRY=24h

# Frontend Configuration
FRONTEND_URL=http://localhost:5173
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,http://localhost:8080

# File Upload Configuration
MAX_FILE_SIZE=209715200 # 200MB in bytes
UPLOAD_DIR=./uploads
TEMP_DIR=./temp

# Analysis Configuration
ANALYSIS_FRAMES=8
SKIN_THRESHOLD_AVG=0.3
SKIN_THRESHOLD_MAX=0.45
MIN_DURATION_FOR_ANALYSIS=5

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@videosensitivity.com

# Redis Configuration (Optional - for caching/sessions)
REDIS_URL=redis://localhost:6379

# External Services (Optional)
CLOUDINARY_URL=cloudinary://api_key:api_secret@cloud_name
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=your-bucket-name

# Monitoring (Optional)
SENTRY_DSN=your_sentry_dsn_url
NEW_RELIC_LICENSE_KEY=your_new_relic_key

# ======================================
# ‚ö†Ô∏è  Security Notes:
# ======================================
